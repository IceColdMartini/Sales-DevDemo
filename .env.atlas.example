# MongoDB Atlas Configuration Example
# Copy this to your .env file and update with your Atlas credentials

# Set to true to use MongoDB Atlas instead of local MongoDB
USE_MONGODB_ATLAS=true

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_ATLAS_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/sales_conversations?retryWrites=true&w=majority

# Database name in MongoDB Atlas
MONGODB_ATLAS_DB_NAME=sales_conversations

# Keep these for fallback to local MongoDB if needed
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=conversations_db

# Your existing environment variables (keep these unchanged)
# PostgreSQL Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sales_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_MODEL=gpt-4

# Sales Agent Configuration
MAX_CONVERSATION_HISTORY=20
SIMILARITY_THRESHOLD=0.7
MAX_RELEVANT_PRODUCTS=3
